<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.westcatr.vcms.mapper.FileMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.westcatr.vcms.entity.File">
        <id column="id" property="id"/>
        <result column="file_name" property="fileName"/>
        <result column="file_type" property="fileType"/>
        <result column="file_path" property="filePath"/>
        <result column="file_size" property="fileSize"/>
        <result column="remark_info" property="remarkInfo"/>
        <result column="group_id" property="groupId"/>
        <result column="user_name" property="userName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <delete id="removeGroup" parameterType="java.lang.String">
        DELETE
        FROM
            vc_file_file_group
        WHERE
            file_group_id = #{groupId}

    </delete>
    <delete id="deleteFromMid" parameterType="string">
         DELETE
        FROM
            vc_file_file_group
        WHERE
            file_id = #{id};
    </delete>
    <select id="listFileByGroupId" parameterType="string" resultType="com.westcatr.vcms.entity.File">
       SELECT
            f.*
        FROM
            vc_file AS f
            JOIN vc_file_file_group AS ffg ON f.id = ffg.file_id
            AND ffg.file_group_id = #{id}
    </select>

</mapper>
